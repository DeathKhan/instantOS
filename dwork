KEY=${1:-Right}

xdotool key "super+$KEY"

for i in {1..10}; do
    if xprop -root | head -1 | grep -o '0x.*' | sed 's/0x/0x0/' | grep -q ','; then
        xdotool key "super+$KEY"
    fi
done

xprop -root | head -1 | grep -o '0x.*' | sed 's/0x/0x0/' | grep -q ',' || exit

xdotool key 'super+comma'
for i in {1..10}; do
    if xprop -root | head -1 | grep -o '0x.*' | sed 's/0x/0x0/' | grep -q ','; then
        xdotool key "super+$KEY"
    fi
done
