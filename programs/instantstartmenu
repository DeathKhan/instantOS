#!/bin/bash

CHOICE="$(echo 'applications
settings
terminal
info
shutdown
get started
close menu' | instantmenu -w 200 -n -l 10 -x 0 -y 0 -F)"

[ -z "$CHOICE" ] && exit
echo "$CHOICE"
case "$CHOICE" in
applications)
    appmenu &
    ;;
settings)
    instantsettings &
    ;;
info)
    urxvt -e sh -c 'neofetch && sleep 60m' &
    ;;
shutdown)
    instantshutdown &
    ;;
terminal)
    urxvt -cd "$HOME" &
    ;;
close)
    echo "closed menu"
    ;;
get*)
    firefox 'https://instantos.github.io/instantos.github.io/documentation'
    ;;
esac
